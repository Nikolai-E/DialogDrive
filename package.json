{
  "name": "dialogdrive",
  "description": "DialogDrive - Your AI Project Workspaces Extension",
  "private": true,
  "version": "1.0.6",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare",
    "clean": "rimraf node_modules .wxt dist build",
    "pretest:e2e": "npm run build",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "test": "npm run test:unit",
    "test:unit": "vitest --run --coverage",
    "test:watch": "vitest",
    "test:ci": "vitest --run --coverage --reporter=junit",
    "clean:files": "node -e \"require('fs').readdirSync('.').filter(f => f.startsWith('test-') && f.endsWith('.html')).forEach(f => require('fs').unlinkSync(f))\"",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "lint:types": "tsc --noEmit",
    "lint:eslint": "eslint tests --max-warnings=0",
    "lint:prettier": "prettier --check \"tests/**/*.{ts,tsx}\" \"docs/**/*.md\" \"TESTING.md\" \"vitest.config.ts\" \"playwright.config.ts\" \"package.json\"",
    "lint": "npm run lint:types && npm run lint:eslint && npm run lint:prettier",
    "prebuild": "npm run lint",
    "reset:ui": "tsx scripts/reset-ui-only.ts",
    "backup": "node scripts/backup.cjs",
    "check:fast": "tsc --noEmit",
    "check:all": "npm run check:fast && npm run build && npm run test:e2e",
    "test:e2e:smoke": "playwright test --grep \"@smoke\"",
    "lint:website": "prettier --check \"website/index.html\" \"website/styles/**/*.css\" \"website/scripts/**/*.js\"",
    "check:website": "npm run lint:website"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.0",
    "@tanstack/react-virtual": "^3.13.12",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.11",
    "lucide-react": "^0.417.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "sonner": "^1.5.0",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.1.0",
    "zod": "^4.0.15",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.0",
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^24.2.0",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/coverage-v8": "2.1.9",
    "@vitest/ui": "2.1.9",
    "@wxt-dev/module-react": "^1.1.3",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "jsdom": "^27.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3",
    "vitest": "2.1.9",
    "wxt": "^0.20.6"
  }
}
