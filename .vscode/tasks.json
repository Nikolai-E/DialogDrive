{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Extension",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"build"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": [
				"$tsc"
      ]
    },

    {
      "label": "Clean Project",
      "type": "shell",
      "command": "npm run clean && npm install",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": []
    },
    
    {
      "label": "Fix All TypeScript Errors",
      "type": "npm",
      "script": "compile",
      "group": "build",
      "problemMatcher": "$tsc"
    },
    {
      "label": "Build Extension",
      "type": "npm",
      "script": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Dev Mode",
      "type": "npm",
      "script": "dev",
      "isBackground": true,
      "problemMatcher": []
    }
		]
}